.c-content-area.d-flex.justify-content-center.align-items-center
  .container.d-flex.justify-content-around.align-items-center.flex-wrap.c-login-box
    .d-flex.flex-column.justify-content-between.c-box-left
      form(action='/user/login' method='POST')
        h2 LogIn
        label(for='userEmail') Email
        input#userEmail.form-control(type='text' name='userEmail' placeholder='Email..' required='')
        label.mt-2.w-100(for='userPassword') Password
          span.float-right
            a(href='#') Forgot Password?
        input#userPassword.form-control(type='password' name='userPassword' placeholder='Password..' required='')
        button.btn.btn-outline-success.w-100.mt-2(type='submit') LogIn
        a.mt-1(href='/user/signin') New Account
        if msg
          +__msgAlert(msg)
    .d-flex.flex-column.justify-content-between.c-box-right
      h2.align-self-start Federate login
      a.btn.btn-outline-info.w-75.mt-2(href='/user/auth/google') Login with Google
      a.btn.btn-outline-danger.w-75.mt-2(href='/user/auth/github') Login with Github
